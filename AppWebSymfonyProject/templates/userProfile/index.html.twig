{# templates/userProfile/index.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Profil Utilisateur{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1><strong>Profil Utilisateur</strong></h1>
                <br><br>
                <h3>Détails et édition des informations utilisateur.</h3>
                <br>
                <div>
                    <h3>Votre profil:</h3>
                    <p><strong>Nom d'utilisateur:</strong> {{ user.username }}</p>
                    <p><strong>Prénom:</strong> {{ user.firstName }}</p>
                    <p><strong>Nom:</strong> {{ user.lastName }}</p>
                    <p><strong>Email:</strong> {{ user.email }}</p>
                </div>
                <a href="{{ path('profile_edit') }}" class="btn btn-primary">Modifier le profil</a>
                <br><br>
                <a href="{{ path('profile_edit_password') }}" class="btn btn-primary">Changer de mot de passe</a>
            </div>
        </div>
    </div>
{% endblock %}