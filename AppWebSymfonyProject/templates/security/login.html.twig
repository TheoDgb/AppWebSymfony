{# templates/security/login.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h1><strong>Connexion</strong></h1>
                <br><br>
                <h3>Connectez-vous à votre compte !</h3>
                <br>
                <form method="post">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    {% if app.user %}
                        <div class="mb-3">
                            Vous êtes connecté avec {{ app.user.email }}, <a href="{{ path('app_logout') }}">Se déconnecter</a>
                        </div>
                    {% endif %}

                    <label for="inputEmail">Email</label>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="username" required autofocus>
                    <br>
                    <label for="inputPassword">Password</label>
                    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

                    <input type="hidden" name="_csrf_token"
                           value="{{ csrf_token('authenticate') }}"
                    >
                    <br>
                    <div class="row justify-content-center">
                        <div class="col-md-6">
                            <button class="btn btn-primary" type="submit">Se connecter</button>
                        </div>
                        <div class="col-md-6">
                            <button class="btn btn-primary" onclick="window.location.href='{{ path('app_register') }}'">Créer un compte</button>
                        </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
