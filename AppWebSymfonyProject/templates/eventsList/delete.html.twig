{# templates/eventsList/delete.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Supprimer Événement{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1><strong>Supprimer Événement</strong></h1>
                <br><br>
                <h3>Voulez-vous vraiment supprimer cet événement ?</h3>
                <br>
                <form method="post">
                    <button class="btn btn-danger" type="submit">Supprimer</button>
                    <a href="{{ path('app_events_list') }}" class="btn btn-secondary">Annuler</a>
                </form>
            </div>
        </div>
    </div>
{% endblock %}