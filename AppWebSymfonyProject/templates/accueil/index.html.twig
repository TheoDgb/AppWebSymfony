{# templates/accueil/index.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            {% for event in events %}
            <div class="col-md-4 mb-4">
                <div class="card">
                    <h3 class="card-header"><strong>{{ event.title }}</strong></h3>
                    <div class="card-body">
                        <h4 class="card-title"><strong>Détails</strong></h4>
                        <p class="card-text"><strong>Description de l'événement:</strong><br>{{ event.description }}</p>
                        <p class="card-text"><strong>Date & Horaire:</strong> {{ event.dateTime|date('d-m-Y H:i') }}</p>
                        <p class="card-text"><strong>Participants maximum:</strong> {{ event.maxParticipants }}</p>
                    </div>
                </div>
            </div>
            {% if loop.index % 4 == 0 %}
        </div><div class="row">
            {% endif %}
            {% endfor %}
        </div>

        <div class="row">
            <div class="col-md-12">
                <br><br>
                <h3>Accueil</h3>
                <p>Vue générale des événements disponibles.</p>
                <br>
                <h3>Créer Événement</h3>
                <p>Formulaire de création d’événements.</p>
                <br>
                <h3>Liste des Événements</h3>
                <p>Vue listant tous les événements avec options de filtrage.</p>
                <br>
                <h3>Inscriptions</h3>
                <p>Liste des événements auxquels l'utilisateur est inscrit.</p>
                <br>
                <h3>Profil Utilisateur</h3>
                <p>Détails et édition des informations utilisateur.</p>
            </div>
        </div>
    </div>
{% endblock %}